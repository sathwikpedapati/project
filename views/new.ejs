<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3">
  <div class="col-8 offset-2">
<form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
    <label class="form-label">Enter the title </label>
    <input type="text" placeholder="add an cachy title" name="listing[title]" class="form-control" required/>
    <div class="valid-feedback">Title looks Good!</div>
    </div>
    <div class="mb-3">
    <label class="form-label">Enter the description </label>
   <textarea placeholder="enter the description" name="listing[description]" rows="6" cols="35" class="form-control" required></textarea>
   <div class="invalid-feedback">Description should be short</div>
    </div>
    <div class="row">
    <div class="mb-3 col-md-4">
    <label class="form-label">Enter the price </label>
    <input type="number" placeholder="1300"name="listing[price]" class="form-control" required/>
    <div class="invalid-feedback">Price Should be valid</div>
    </div>
    <div class="mb-3 col-md-8">
    <label class="form-label">Upload Listing Image</label>
    <input type="file" placeholder="choosen file"name="listing[image]" class="form-control" required/>
    <div class="invalid-feedback">Image equired</div>
    </div>
    </div>
    <div class="mb-3">
    <label class="form-label"> Enter the location</label>
    <input type="text" placeholder="thailand ,Bangkok"name="listing[location]" class="form-control" required/>
    <div class="invalid-feedback">Location Required</div>
    </div>
    <div class="mb-3">
    <label class="form-label"> Enter the country</label>
    <input type="text" placeholder="India"name="listing[country]" class="form-control" required/>
    <div class="invalid-feedback">Country Required</div>
    </div>
    <button class="btn btn-dark add-btn mt-3">add </button>    
</form>
  </div>
</div>
</body>